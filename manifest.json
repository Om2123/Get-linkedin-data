{
  "manifest_version": 3,
  "name": "Tab Title Extension",
  "version": "1.0",
  "description": "A Chrome extension to display the title of the current tab.",
  "permissions": ["activeTab",
   "scripting" ,
   "https://www.linkedin.com/in/rajesh-kr-mehra/" , 
   "https://www.linkedin.com/*"] ,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
